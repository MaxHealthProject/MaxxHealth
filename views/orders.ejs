<%- include("./partials/headers/cdn.ejs") %>

<link rel="stylesheet" href="/stylesheets/profile.css">
<title>Orders History</title>

<%- include("./partials/headers/navbar.ejs") %>

<div class="container">
    <div class="row">

        <div class="col-12 col-lg-8">

            <% foundProducts.forEach(function(productDetail, index){ %>

            <div class="col-12 d-flex flex-row justify-content-between">
                <div class="row d-flex align-items-center bg-white rounded my-3">

                    <div class="col-2 col-md-3 p-0">
                        <img class="img-fluid" src="<%= productDetail.image %>" class="my_img p-3" height="150px"
                            width="150px">
                    </div>

                    <div class="col-5 col-md-6">
                        <h4 class="font-weight-light"><%= productDetail.name %></h4>
                    </div>

                    <div class="col-5 col-md-3 d-flex flex-row">
                        <div class="row">

                            <div class="col-12 d-flex flex-row">
                                <h4 class="mr-auto font-weight-light">Price per unit:-</h4>

                            </div>

                            <div class="col-12">
                                <h5>₹ <%= productDetail.price %> /-</h5>
                            </div>

                            <div class="col-12 mb-2">
                                <a href="/otc/<%= productDetail._id %>" class="btn btn-sm btn-primary w-100">
                                    <span><i class="fas fa-redo mr-1"></i></span> Buy Again
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            <% }); %>

        </div>

        <div class="col-12 col-lg-4">
            <div class="row my-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center">
                            <h2 class="card-title font-weight-light mb-3">Your Orders</h2>
                            <hr class="bg-dark">
                            <h4 class="font-weight-light">Total Amount</h4>
                            <h2 class="font-weight-light">₹ <%= cartAmount %> /-</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<%- include("./partials/footer.ejs") %>