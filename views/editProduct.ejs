<%- include("./partials/headers/cdn.ejs") %>

<link rel="stylesheet" href="/stylesheets/main.css">
<title>Add New Product</title>

<%- include("./partials/headers/navbar.ejs") %>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card p-3 shadow-lg my-3 mx-auto">
                <div class="card-body">
                    <h2 class="text-monospace card-title text-center m-3 font-weight-bold">EDIT THIS PRODUCT</h2>

                    <form action="/otc/<%= product._id%>?_method=PUT" method="POST">
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Name</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[name]" placeholder="Name" 
                            value = "<%= product.name%>">
                        </div>

                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Image URL</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[image]" placeholder="Image URL..."
                            value = "<%= product.image%>">
                        </div>
                        
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Price</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[price]" placeholder="Price in Rs"
                            value = "<%= product.price%>">
                        </div>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Category</label>
                            <select class="form-control form-control-lg rounded-pill" name="product[category]"
                            value = "<%= product.category%>">
                                <option value="Fitness & Supplements"
                                <%if(product.category=="Fitness & Supplements"){%>
                                    selected="selected"
                                <%}%>
                                >Fitness & Supplements</option>
                                <option value="Ayurveda"
                                <%if(product.category=="Ayurveda"){%>
                                    selected="selected"
                                <%}%>
                                >Ayurveda</option>
                                <option value="Sports & Gym Equipment"
                                <%if(product.category=="Sports & Gym Equipment"){%>
                                    selected="selected"
                                <%}%>
                                >Sports & Gym Equipment</option>
                                <!-- <option value="4">4</option> -->
                            </select>
                        </div>
                        <!-- <div class="form-group mt-3">
                            <label class="font-weight-bold">Category</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[category]" placeholder="Category">
                        </div> -->
                        <hr>
                        <label class="font-weight-bold">DESCRIPTION</label>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">About</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[description][about]" placeholder="About"
                            value = "<%= product.description.about%>">
                        </div>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Ingredients</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[description][ingredients]" placeholder="Ingredients"
                            value = "<%= product.description.ingredients%>">
                        </div>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Benefits</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[description][benefits]" placeholder="Benefits"
                            value = "<%= product.description.benefits%>">
                        </div>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Dosage</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[description][dosage]" placeholder="Dosage"
                            value = "<%= product.description.dosage%>">
                        </div>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Storage</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[description][storage]" placeholder="Storage"
                            value = "<%= product.description.storage%>">
                        </div>
                        <div class="form-group mt-3">
                            <label class="font-weight-bold">Safety</label>
                            <input class="form-control form-control-lg rounded-pill" 
                            type="text" name="product[description][safety]" placeholder="Safety"
                            value = "<%= product.description.safety%>">
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary w-100 my-3 rounded-pill">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

<%- include("./partials/footer.ejs") %>