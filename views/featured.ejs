<%- include("./partials/headers/cdn.ejs") %>

<link rel="stylesheet" href="/stylesheets/featured.css">
<title>MaxHealth</title>

<%- include("./partials/headers/navbar.ejs") %>


<div class="container">
    <div class="row">

        <div class="col-12 d-flex justify-content-center my-3 mx-auto">

            <div id="carouselWithControl" class="carousel slide" data-ride="carousel" data-interval="2500">
                <div class="carousel-inner shadow rounded">
                    <div class="carousel-item active">
                        <a href="/otc/find/Fitness%20&%20Supplements">
                            <img src="/assets/1200x250/healthProductsBanner.jpg" class="d-block w-100" alt="horlicks">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/otc/find/Ayurveda">
                            <img src="/assets/1200x250/ayurvedaBanner.jpg" class="d-block w-100" alt="horlicks">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/otc/find/Sports%20&%20Gym%20Equipment">
                            <img src="/assets/1200x250/liveLifeBanner.jpg" class="d-block w-100" alt="horlicks">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <img src="/assets/1200x250/maxhealthBanner.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselWithControl" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselWithControl" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div class="col-md-7 col-sm-12 d-flex justify-content-start my-3">

            <div id="carouselWithControl2" class="carousel slide" data-ride="carousel" data-interval="3000">
                <div class="carousel-inner shadow rounded">
                    <div class="carousel-item active">
                        <a href="/otc/5eaa65a6a2fe753f240448bb">
                            <img src="/assets/754x440/horlicks.jpg" class="d-block w-100" alt="horlicks">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/otc/5eb7bf84b7c87300173a08c3">
                            <img src="/assets/754x440/accucheck.jpg" class="d-block w-100" alt="horlicks">
                        </a>
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselWithControl2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselWithControl2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div class="col-md-5 col-sm-12 ">
            <div class="row">

                <div class="col-12">
                    <h3 class="text-center text-white font-weight-light bg-danger my-3 py-2 shadow rounded">
                        Featured
                        Products</h3>
                </div>

                <a class="text-dark zoom" href="/otc/<%= products[0].id %>" style="text-decoration:none">
                    <div class="col-12 d-flex flex-row">
                        <div class="col-4 d-flex justify-content-start">
                            <img src="<%= products[0].image %>" class="img-fluid shadow" alt="product image">
                        </div>
                        <div class="col-8 d-flex align-items-center">
                            <h3 class="font-weight-light text-white"><%=products[0].name%></h3>
                        </div>
                    </div>
                </a>

                <a class="text-dark zoom" href="/otc/<%= products[5].id %>" style="text-decoration:none">
                    <div class="col-12 d-flex flex-row mt-3">
                        <div class="col-4 d-flex align-items-center">
                            <img src="<%= products[5].image %>" class="img-fluid shadow" alt="product image">
                        </div>
                        <div class="col-8 d-flex align-items-center">
                            <h3 class="font-weight-light text-white"><%=products[5].name%></h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>


        <% products.forEach(function(product, index){ %>
        <%if(index<=7 && index!=0 && index!=5){ %>
        <div class="col-6 col-sm-4 col-md-3 col-xl-2 my-4 zoom d-flex justify-content-around mx-auto">
            <a href="/otc/<%= product.id %>" style="text-decoration:none">
                <div class="card text-center pt-3 border border-primary shadow" style="width: 10rem; height: 20rem;">
                    <img id="productImg" src="<%= product.image %>" class="card-img-top mx-auto" alt="product image">
                    <div class="card-body">
                        <% if(product.name.length>20){ %>
                        <% var smallName=product.name.substring(0,21)+"..."; %>
                        <h5 class="card-title text-dark font-weight-light"><%= smallName %></h5>
                        <% }else{ %>
                        <h5 class="card-title text-dark font-weight-light"><%= product.name %></h5>
                        <% } %>
                    </div>
                    <div class="card-footer bg-success text-white font-weight">â‚¹ <%= product.price %> /-</div>
                </div>
            </a>
        </div>
        <% } %>

        <% }); %>

        <div class="col-12">
            <a href="/otc" class="btn btn-warning w-100 mb-3 shadow">View all products</a>
        </div>


        <div class="col-12">
            <hr class="bg-white">
        </div>

    </div>

    <div class="row my-3">

        <div class="col-12 text-center">
            <h1 class="bg-primary text-white rounded py-2 font-weight-light shadow">Health Articles</h1>
        </div>
        <% blogs.forEach(function(blog, index){ %>
        <div class="col-sm-4 text-center my-3">
            <a href="/blog/<%= blog.id %>" style="text-decoration:none">
                <div class="card shadow" style="height: 22rem;">
                    <img src="<%= blog.image %>" class="card-img-top" style="height: 14rem;" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %>...</h5>
                    </div>
                    <div class="card-footer bg-success text-white font-weight">Read Post</div>
                </div>
            </a>
        </div>
        <% }); %>

    </div>

</div>

<%- include("./partials/footer.ejs") %>