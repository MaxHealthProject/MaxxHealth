<%- include("./partials/headers/cdn.ejs") %>

<link rel="stylesheet" href="/stylesheets/main.css">
<title>Login</title>

<%- include("./partials/headers/navbar.ejs") %>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6 ">
            <div class="card p-3 shadow-lg my-3 mx-auto">
                <div class="card-body">
                    <h2 class="card-title text-center m-3 font-weight-light">Login</h2>

                    <form action="/blog" method="POST">
                        <div class="form-group">
                            <input class="form-control form-control-lg rounded-pill mt-5" type="text" name="blogtitle"
                                id="blogtitle" placeholder="Blog Title...">
                        </div>

                        <div class="form-group">
                            <input class="form-control form-control-lg rounded-pill mt-5" type="text" name="blogtitle"
                                id="blogtitle" placeholder="Author name...">
                        </div>

                        <div class="form-group">
                            <input class="form-control form-control-lg rounded-pill mt-3" type="text" name="author"
                                id="author" placeholder="Image URL...">
                        </div>

                        <div class="form-group">
                            <input class="form-control form-control-lg rounded-pill mt-3" type="textarea" name="content"
                                id="content" placeholder="Description...">
                        </div>

                        <button type="submit" class="btn btn-lg btn-primary w-100 my-3 rounded-pill"
                            id="Submit">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

